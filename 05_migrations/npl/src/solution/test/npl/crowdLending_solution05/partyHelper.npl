package crowdLending_solution05

function getAliceParty() returns Party -> {
    return partyOf(
        mapOf(
            Pair("iss", setOf(ISS)),
            Pair("email", setOf("alice@nd.tech"))
        ),
        mapOf(
            Pair("department", setOf("Procurement"))
        )
    );
};

